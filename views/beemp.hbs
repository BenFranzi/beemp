<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Beemp</title>
  <link rel="stylesheet" href="/bootstrap-3.3.7-dist/css/bootstrap.min.css">
  <script src="/jquery.min.js"></script>
  <script src="/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
  <script src="/js/beemp.js"></script>
</head>
<body>
<div class="row text-center">
  <h1>Trending</h1>
</div>


<div class="jumbotron"></div>

<!-- ADD NEW ELEMENT -->
<div class="container text-center" id="enter-new-message" style="visibility: hidden;">
  <form action="/beemp" method="post">
    <div class="form-group">
      <label>Message</label><input type="text" name="message">
      <button type="submit">Send</button>
    </div>
  </form>
</div>


<div class="container">
  <div class="col-md-2">
    <button type="button" name="button" onclick="messageDialogToggle('enter-new-message')">Add new beemp</button>
    <a href="/logout">logout</a>
  </div>

  <div class="col-md-6">
    <ul style="list-style: none;">

      {{#each messages}}
      <li>
        <div class="panel panel-default">
          <div class="panel-body">
            <h3>{{name}}</h3>
            <p>{{message}}</p>
            <div class="text-right">
              <a href="/beemp/delete/{{_id}}">delete</a>
              <a href="/beemp/edit/{{_id}}">edit</a>
            </div>
          </div>
        </div>
      </li>
      {{/each}}

    </ul>
  </div>

  <div class="col-md-3 text-right">
    <h2>{{user.local.username}}</h2>
    <p>{{user.local.first_name}}
      {{user.local.last_name}}</p>
  <p>{{user.local.email}}</p>
  </div>
</div>


</body>
</html>
